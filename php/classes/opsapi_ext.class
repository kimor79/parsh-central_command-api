require('Ops/api.class');

class OpsApiParsh extends OpsApi {

	public function sortData ($data) {
	// Overwrite OpsApi->sortData to account
	// for start_time and finish_time

		$sortcol = $this->getSort($data);
		$sortdir = $this->getDir();

		$a_col = array();
		$stime_col = array();
		$ftime_col = array();
		foreach ($data as $key => $row) {
			if(!array_key_exists($sortcol, $row)) {
				return $data;
			}

			// 'finish' time of '0' means the job is
			// still running. 'start' time of '0' means
			// the job has not started yet. Set it to the
			// future so it gets sorted as the most recent.

			if($row['start_time'] == '0') {
				$row['start_time'] = time() * 2;
			}

			if($row['finish_time'] == '0') {
				$row['finish_time'] = time() * 2;
			}

			$stime_col[$key] = $row['start_time'];
			$ftime_col[$key] = $row['finish_time'];
			$a_col[$key] = $row[$sortcol];
		}

		$r_sort = SORT_DESC;
		switch($sortdir) {
			case 'asc':
				$r_sort = SORT_ASC;
				break;
			case 'desc':
				$r_sort = SORT_DESC;
				break;
		}

		$t_sort = SORT_DESC;
		if($sortcol === 'start_time' || $sortcol === 'finish_time') {
			$t_sort = $r_sort;
		}

		array_multisort($a_col, $r_sort, $ftime_col, $t_sort, $stime_col, $t_sort, $data);
		return $data;
	}
}

?>
